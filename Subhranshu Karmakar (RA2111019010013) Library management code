int main()
{
	struct
	library lib[100];
  char ar_nm[30], bk_nm[30];
	int i, input, count;
  i = input = count = 0;
	while (input != 5) {
		printf("*******WELCOME TO SRM LIBRARY MANAGER**********\n");
